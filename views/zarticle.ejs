<%- include zheader %>
<%- include zsidenav %>

<!-- 主体内容 start-->
<section class="z-main">
<ul class="z-list" id="z-list">
<% posts.forEach(function (post, index) { %>
  <li>
    <div class="z-title clearfix">
      <p>作者：<a href="/u/<%= post.name %>"><span class="z-author"><%= post.name %></span></a>发表日期：<span class="z-time"><%= post.time.minute %></span></p>
      <h6><%= post.title %></h6>
    </div>
    <div class="z-info">
      <div class="z-content">
        <%- post.post %>
      </div>
      <p class="z-tag-wrap">
        <% post.tags.forEach(function (tag, index) { %>
          <% if (tag) { %>
            <a href="/tags/<%= tag %>" class="z-tag"><%= tag %></a>
          <% } %>
        <% }) %>
        <a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>" class="z-more">查看全文 >></a>
        <% if (post.reprint_info.reprint_from) { %>
          <a href="/u/<%= post.reprint_info.reprint_from.name %>/<%= post.reprint_info.reprint_from.day %>/<%= post.reprint_info.reprint_from.title %>" class="z-more">原文链接 >></a>
        <% } %>
      </p>
      <div class="z-content-do clearfix">
        <p>阅读：<span class="z-read"><%= post.pv %></span></p>
        <p>评论：<span class="z-comment"><%= post.comments.length %></span></p>
        <p>转载：<span class="z-reprint">
          <% if (post.reprint_info.reprint_to) { %>
            <%= post.reprint_info.reprint_to.length %>
          <% } else { %>
            <%= 0 %>
          <% } %>
        </span></p>
      </div>
    </div>
  </li>
<% }) %>
</ul>
<!-- 文章分页 start -->
<% if(page && allPages) { %>
  <div id="z-pagination" page="<%= page %>" allPages="<%= allPages %>" >
  </div>
<% } %>
<!-- 文章分页 end -->
<!-- 文章发表按钮 start -->
<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
  <a href="/post" class="btn-floating btn-large red waves-effect waves-dark" title="发表文章">
    <i class="icon-pencil"></i>
  </a>
</div>
<!-- 文章发表按钮 end -->
<%- include zfooter %>